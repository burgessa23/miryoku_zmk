    };
    hrasK: hrasK {
        compatible = "zmk,behavior-hold-tap";
        label = "hrasK";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <250>;
        quick-tap-ms = <QUICK_TAP_TERM>;
