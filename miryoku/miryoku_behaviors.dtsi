    hrasJ: hrasJ {
        compatible = "zmk,behavior-hold-tap";
        label = "hrasJ";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <250>;
        quick-tap-ms = <QUICK_TAP_TERM>;
        bindings = <&kp>, <&kp>;
        retro-tap;
        retro-tap-behavior = "KEY_PRESS";
