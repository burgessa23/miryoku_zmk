    hrasA: hrasA {
        compatible = "zmk,behavior-hold-tap";
        label = "hrasA";
        #binding-cells = <2>;
        flavor = "balanced";
        tapping-term-ms = <250>;
        quick-tap-ms = <QUICK_TAP_TERM>;
        bindings = <&kp>, <&kp>;
        retro-tap;
        retro-tap-behavior = "KEY_PRESS";
        retro-tap-param1 = <LS(A)>;
    };
    hrasS: hrasS {
        compatible = "zmk,behavior-hold-tap";
        label = "hrasS";
        #binding-cells = <2>;
        flavor = "tap-preferred";
